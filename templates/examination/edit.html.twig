{% extends 'base.html.twig' %}

{% block title %}Edit Examination{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Redaguoti tyrimą</h1>
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> Atnaujinkite tyrimo informaciją.
        </div>
        {{ form_start(form) }}
        <div class="card p-4 shadow">
            {{ include('examination/_form.html.twig', {'button_label': 'Atnaujinti'}) }}
        </div>
        <div class="d-flex justify-content-between mt-3">
            <button type="button" class="btn btn-secondary" onclick="window.history.back();">Atgal</button>
            <button type="submit" class="btn btn-primary">Atnaujinti</button>
        </div>
        {{ form_end(form) }}
        <div class="d-flex justify-content-end mt-3">
            {{ include('examination/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
