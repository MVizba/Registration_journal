{% extends 'base.html.twig' %}

{% block title %}Patient index{% endblock %}

{% block body %}
    <h1>Patient index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Type</th>
                <th>Gender</th>
                <th>Age</th>
                <th>MarkingNumber</th>
                <th>PassportNumber</th>
                <th>Appearance</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for patient in patients %}
            <tr>
                <td>{{ patient.id }}</td>
                <td>{{ patient.name }}</td>
                <td>{{ patient.type }}</td>
                <td>{{ patient.gender }}</td>
                <td>{{ patient.age ? patient.age|date('Y-m-d') : '' }}</td>
                <td>{{ patient.markingNumber }}</td>
                <td>{{ patient.passportNumber }}</td>
                <td>{{ patient.appearance }}</td>
                <td>
                    <a href="{{ path('app_patient_show', {'id': patient.id}) }}">show</a>
                    <a href="{{ path('app_patient_edit', {'id': patient.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_patient_new') }}">Create new</a>
{% endblock %}
