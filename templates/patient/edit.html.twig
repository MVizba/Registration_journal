{% extends 'base.html.twig' %}

{% block title %}Edit Patient{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <h1 class="text-left">Edit Patient</h1>

                {{ form_start(form) }}
                <div class="card p-4 shadow">
                    {{ include('patient/_form.html.twig', {'button_label': 'Update'}) }}
                </div>
                {{ form_end(form) }}

                <div class="row justify-content-left mt-3">
                    <div class="col-auto">
                        <a href="{{ path('app_patient_index') }}" class="btn btn-secondary">Back to list</a>
                    </div>
                </div>

                <div class="row justify-content-left mt-3">
                    <div class="col-auto">
                        {{ include('patient/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}