{% extends 'base.html.twig' %}

{% block title %}Patient{% endblock %}

{% block body %}
    <h1>Patient</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ patient.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ patient.name }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ patient.type }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ patient.gender }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ patient.age ? patient.age|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>MarkingNumber</th>
                <td>{{ patient.markingNumber }}</td>
            </tr>
            <tr>
                <th>PassportNumber</th>
                <td>{{ patient.passportNumber }}</td>
            </tr>
            <tr>
                <th>Appearance</th>
                <td>{{ patient.appearance }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_patient_index') }}">back to list</a>

    <a href="{{ path('app_patient_edit', {'id': patient.id}) }}">edit</a>

    {{ include('patient/_delete_form.html.twig') }}
{% endblock %}
