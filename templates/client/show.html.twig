{% extends 'base.html.twig' %}

{% block title %}Client Details{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Client Details</h1>
            <div class="btn-group">
                <a href="{{ path('app_client_edit', {'id': client.id}) }}" class="btn btn-primary">Edit</a>
                <a href="{{ path('app_client_index') }}" class="btn btn-secondary">Back to List</a>
            </div>
        </div>

        <!-- Client Information -->
        <div class="card shadow mb-4">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Basic Information</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Name:</strong> {{ client.name }} {{ client.lastName }}</p>
                        <p><strong>Email:</strong> {{ client.email }}</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Phone:</strong> {{ client.phone }}</p>
                        <p><strong>Address:</strong> {{ client.address }}</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Patients Section -->
        {% for patient in client.patients %}
            <div class="card shadow mb-4">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Patient: {{ patient.name }}</h4>
                </div>
                <div class="card-body">
                    <!-- Patient Information -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5>Patient Details</h5>
                            <p><strong>Type:</strong> {{ patient.type }}</p>
                            <p><strong>Gender:</strong> {{ patient.gender }}</p>
                            <p><strong>Age:</strong> {{ patient.age ? patient.age|date('Y-m-d') : 'Not specified' }}</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Marking Number:</strong> {{ patient.markingNumber ?: 'Not specified' }}</p>
                            <p><strong>Passport Number:</strong> {{ patient.passportNumber ?: 'Not specified' }}</p>
                            <p><strong>Appearance:</strong> {{ patient.appearance }}</p>
                        </div>
                    </div>

                    <!-- Patient's Appointments -->
                    <h5 class="mb-3">Appointments</h5>
                    {% if patient.appointments is not empty %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Date</th>
                                        <th>Status</th>
                                        <th>Diagnosis</th>
                                        <th>View</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for appointment in patient.appointments %}
                                        <tr>
                                            <td>{{ appointment.date ? appointment.date|date('Y-m-d H:i') : '' }}</td>
                                            <td>
                                                <span class="text-truncate d-inline-block" style="max-width: 200px;" title="{{ appointment.status }}">
                                                    {{ appointment.status }}
                                                </span>
                                            </td>
                                            <td>
                                                <span class="text-truncate d-inline-block" style="max-width: 200px;" title="{{ appointment.diagnosis }}">
                                                    {{ appointment.diagnosis }}
                                                </span>
                                            </td>
                                            <td>
                                                <a href="{{ path('app_appointment_show', {'id': appointment.id}) }}" class="btn btn-sm btn-info">
                                                    View Details
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <p class="text-muted">No appointments found for this patient.</p>
                    {% endif %}
                </div>
            </div>
        {% else %}
            <div class="alert alert-info">
                This client has no registered patients.
            </div>
        {% endfor %}

        <!-- Delete Button -->
        <div class="text-end mt-4">
            {{ include('client/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
