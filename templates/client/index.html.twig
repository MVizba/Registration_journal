{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}

{% block body %}
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Vardas</th>
                <th>Pavardė</th>
                <th>Adresas</th>
                <th>Telefono nr.:</th>
                <th>El. paštas</th>
                <th>Veiksmai</th>
            </tr>
            </thead>
            <tbody>
            {% for client in clients %}
                <tr>
                    <td>{{ client.name }}</td>
                    <td>{{ client.lastName }}</td>
                    <td>{{ client.address }}</td>
                    <td>{{ client.phone }}</td>
                    <td>{{ client.email }}</td>
                    <td>
                        <a href="{{ path('app_client_show', {'id': client.id}) }}" class="btn btn-secondary btn-sm">Rodyti</a>
                        <a href="{{ path('app_client_edit', {'id': client.id}) }}" class="btn btn-secondary btn-sm">Redaguoti</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="text-center">Įrašų nerasta</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
