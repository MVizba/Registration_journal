{% extends 'base.html.twig' %}

{% block title %}Edit Client{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center">Edit Client</h1>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <!-- Form for editing client -->
                <form method="post" action="{{ path('app_client_edit', {'id': client.id}) }}" id="client_form">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <div class="row mt-3 justify-content-between">
                        <div class="col-auto">
                            <a href="{{ path('app_client_index') }}" class="btn btn-secondary">Back to list</a>
                        </div>
                        <div class="col-auto">
                            <!-- Update button inside the form -->
                            <button type="submit" class="btn btn-primary">Update</button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </form>

                <!-- Include Delete form -->
                <div class="row mt-3 justify-content-end">
                    <div class="col-auto">
                        {{ include('client/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
