{% extends 'base.html.twig' %}

{% block title %}Edit Client{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center">Redaguoti kliento duomenis</h1>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <form method="post" action="{{ path('app_client_edit', {'id': client.id}) }}" id="client_form">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <div class="row mt-3 justify-content-between">
                        <div class="col-auto">
                            <button type="button" class="btn btn-secondary" onclick="window.history.back();">Atgal</button>
                        </div>
                        <div class="col-auto">
                            <button type="submit" class="btn btn-primary">Atnaujinti</button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </form>

                <div class="row mt-3 justify-content-end">
                    <div class="col-auto">
                        {{ include('client/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
