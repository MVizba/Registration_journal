{% extends 'base.html.twig' %}

{% block title %}New Client{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Pridėti klientą</h1>

        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> Užpildykite kliento informaciją.
        </div>

        {{ form_start(form) }}
        <div class="card p-4 shadow">
            {{ include('client/_form.html.twig', {'button_label': 'Išsaugoti'}) }}
        </div>
        {{ form_end(form) }}
        <button type="button" class="btn btn-secondary" onclick="window.history.back();">Atgal</button>
    </div>
{% endblock %}
