{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <h1>Journal of animal treatment</h1>

    <div class="container">
        <h2>Appointments</h2>
        <table class="table">
            <thead>
            <tr>
                <th>Date</th>
                <th>Status</th>
                <th>Diagnosis</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for appointment in appointments %}
                <tr>

                    <td>{{ appointment.date ? appointment.date|date('Y-m-d') : '' }}</td>
                    <td>{{ appointment.status }}</td>
                    <td>{{ appointment.diagnosis }}</td>
                    <td>
                        <a href="{{ path('app_appointment_show', {'id': appointment.id}) }}">Show</a>
                        <a href="{{ path('app_appointment_edit', {'id': appointment.id}) }}">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_appointment_new') }}" class="btn btn-primary">Create New Appointment</a>
    </div>
{% endblock %}
