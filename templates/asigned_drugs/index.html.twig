            <tr>
                <td>{{ asigned_drug.id }}</td>
                <td>{{ asigned_drug.date ? asigned_drug.date|date('Y-m-d') : '' }}</td>
                <td>{{ asigned_drug.type }}</td>
                <td>{{ asigned_drug.amount }}</td>
                <td>
                    <a href="{{ path('app_asigned_drugs_show', {'id': asigned_drug.id}) }}">show</a>
                    <a href="{{ path('app_asigned_drugs_edit', {'id': asigned_drug.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_asigned_drugs_new') }}">Create new</a>
{% endblock %}
