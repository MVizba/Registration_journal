{% extends 'base.html.twig' %}

{% block title %}AsignedDrugs index{% endblock %}

{% block body %}
    <h1>AsignedDrugs index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Type</th>
                <th>Amount</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
