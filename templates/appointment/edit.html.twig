{% extends 'base.html.twig' %}

{% block title %}Edit Appointment{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Edit Appointment</h1>

        <div class="card p-4 shadow">
            {{ form_start(form) }}
            
            <!-- Client and Patient Selection -->
            <div class="row mb-3">
                <div class="col-md-6">
                    {{ form_label(form.client, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.client, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="col-md-6">
                    {{ form_label(form.patient, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.patient, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <!-- Dates -->
            <div class="row mb-3">
                <div class="col-md-4">
                    {{ form_label(form.date, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="col-md-4">
                    {{ form_label(form.registrationDate, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.registrationDate, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="col-md-4">
                    {{ form_label(form.symptomsDate, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.symptomsDate, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <!-- Status and Diagnosis -->
            <div class="row mb-3">
                <div class="col-md-6">
                    {{ form_label(form.status, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.status, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                </div>
                <div class="col-md-6">
                    {{ form_label(form.diagnosis, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.diagnosis, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                </div>
            </div>

            <!-- Services and End Result -->
            <div class="row mb-3">
                <div class="col-md-6">
                    {{ form_label(form.services, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.services, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                </div>
                <div class="col-md-6">
                    {{ form_label(form.endResult, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.endResult, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <button class="btn btn-primary">Update</button>
                <a href="{{ path('app_appointment_index') }}" class="btn btn-secondary">Back to List</a>
            </div>
            
            {{ form_end(form) }}
        </div>

        <div class="mt-5">
            <h3>Examinations</h3>
            <ul class="list-group">
                {% for examinationWithResult in appointment.examinationWithResults %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>
                            <strong>Date:</strong> {{ examinationWithResult.date|date('Y-m-d') }} <br>
                            <strong>{{ examinationWithResult.examination.examinationName }}</strong> <br>
                            Result: {{ examinationWithResult.result }}
                        </span>
                        <span>
                            <a href="{{ path('app_examination_w_r_edit', {'id': examinationWithResult.id}) }}" class="btn btn-sm btn-primary">Edit</a>
                            <form action="{{ path('app_examination_w_r_delete', {'id': examinationWithResult.id}) }}" method="post" style="display: inline;" onsubmit="return confirm('Are you sure?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ examinationWithResult.id) }}">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </span>
                    </li>
                {% else %}
                    <li class="list-group-item text-muted">No examinations found.</li>
                {% endfor %}
            </ul>
            <a href="{{ path('app_examination_w_r_new', {'appointmentId': appointment.id}) }}" class="btn btn-success mt-3">Add Examination</a>
        </div>

        <div class="mt-5">
            <h3>Assigned Drugs</h3>
            <ul class="list-group">
                {% for asignedDrug in appointment.asignedDrugs %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>
                            <strong>Date:</strong> {{ asignedDrug.date|date('Y-m-d') }} <br>
                            <strong>{{ asignedDrug.drugWarehouse.drugName }}</strong> <br>
                            <strong>Amount:</strong> {{ asignedDrug.amount }} {{ asignedDrug.drugWarehouse.type }}
                        </span>
                        <span>
                            <a href="{{ path('app_asigned_drugs_edit', {'id': asignedDrug.id}) }}" class="btn btn-sm btn-primary">Edit</a>
                            <form action="{{ path('app_asigned_drugs_delete', {'id': asignedDrug.id}) }}" method="post" style="display: inline;" onsubmit="return confirm('Are you sure?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ asignedDrug.id) }}">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </span>
                    </li>
                {% else %}
                    <li class="list-group-item text-muted">No drugs assigned.</li>
                {% endfor %}
            </ul>
            <a href="{{ path('app_asigned_drugs_new', {'appointmentId': appointment.id}) }}" class="btn btn-success mt-3">Assign Drugs</a>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ include('appointment/_form.html.twig', {'block': 'javascripts'}) }}
{% endblock %}
