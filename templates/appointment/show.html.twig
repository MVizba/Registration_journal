{% extends 'base.html.twig' %}

{% block title %}Appointment Details{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Appointment Details</h1>

        <div class="card p-4 shadow">
            <!-- Client and Patient Information -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <h5>Client</h5>
                    <p class="mb-0">{{ appointment.client.name }} {{ appointment.client.lastName }}</p>
                </div>
                <div class="col-md-6">
                    <h5>Patient</h5>
                    <p class="mb-0">{{ appointment.patient.name }}</p>
                </div>
            </div>

            <!-- Dates -->
            <div class="row mb-4">
                <div class="col-md-4">
                    <h5>Appointment Date</h5>
                    <p class="mb-0">{{ appointment.date ? appointment.date|date('Y-m-d H:i:s') : '' }}</p>
                </div>
                <div class="col-md-4">
                    <h5>Registration Date</h5>
                    <p class="mb-0">{{ appointment.registrationDate ? appointment.registrationDate|date('Y-m-d H:i:s') : '' }}</p>
                </div>
                <div class="col-md-4">
                    <h5>Symptoms Date</h5>
                    <p class="mb-0">{{ appointment.symptomsDate ? appointment.symptomsDate|date('Y-m-d H:i:s') : '' }}</p>
                </div>
            </div>

            <!-- Status and Diagnosis -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <h5>Status</h5>
                    <p class="mb-0">{{ appointment.status }}</p>
                </div>
                <div class="col-md-6">
                    <h5>Diagnosis</h5>
                    <p class="mb-0">{{ appointment.diagnosis }}</p>
                </div>
            </div>

            <!-- Services and End Result -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <h5>Services</h5>
                    <p class="mb-0">{{ appointment.services }}</p>
                </div>
                <div class="col-md-6">
                    <h5>End Result</h5>
                    <p class="mb-0">{{ appointment.endResult }}</p>
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <div>
                    <a href="{{ path('app_appointment_edit', {'id': appointment.id}) }}" class="btn btn-primary me-2">Edit</a>
                    <a href="{{ path('app_appointment_index') }}" class="btn btn-secondary">Back to List</a>
                </div>
                {{ include('appointment/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
